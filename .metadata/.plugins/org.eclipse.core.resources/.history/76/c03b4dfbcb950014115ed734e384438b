package modes;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.geom.CubicCurve2D;
import java.awt.geom.Ellipse2D;
import java.awt.geom.Point2D;

import javax.swing.BorderFactory;
import javax.swing.JComponent;

public class Bezier extends JComponent{

	/**
	 * 
	 */
	private static final long serialVersionUID = 345469583829550651L;


	CubicCurve2D c = new CubicCurve2D.Double();
	Point2D.Double start = new Point2D.Double(0, 400);
	Point2D.Double end = new Point2D.Double(400,0);

	//Control Points
	Point2D.Double cp1 = new Point2D.Double(400, 400);
	Point2D.Double cp2 = new Point2D.Double(0, 0);
	
	Ellipse2D ep1 = new Ellipse2D.Double(cp1.x, cp1.y, 20, 20);
	Ellipse2D ep2 = new Ellipse2D.Double(cp2.x, cp2.y, 20, 20);
	
	public Bezier(){
		super();
		setBorder(BorderFactory.createLineBorder(Color.black));
	}


	@Override
	public void paint(Graphics g){
		Graphics2D g2 = (Graphics2D)g;

		// draw CubicCurve2D.Double with set coordinates
		c.setCurve(start, cp1, cp2, end);
		g2.draw(c);
		
		g2.draw(ep1);
		g2.draw(ep2);
		
	}

	int squareX = 10;
	int squareY = 10;
	int squareW = 10;
	int squareH = 10;
	
	protected void paintComponent(Graphics g) {
        super.paintComponent(g);       
        g.drawString("This is my custom Panel!",10,20);
        g.setColor(Color.RED);
        g.fillRect(squareX,squareY,squareW,squareH);
        g.setColor(Color.BLACK);
        g.drawRect(squareX,squareY,squareW,squareH);
    } 



}


public class TwoSComplement {
	public static void main(String...argc){
		int integer=0;
		char character=0;
		short shortNumber=0;
		byte isByte=0;
		long isLong=0;
		
		System.out.println("Bits in Integer :" + Integer.SIZE);
		System.out.println("Bits in Char :" + Character.SIZE);
		System.out.println("Bits in Short :" + Short.SIZE);
		System.out.println("Bits in Long :" + Short.SIZE);
	}

}


public class TwoSComplement {
	public static void main(String...argc){
		int integer=0;
		char character=0;
		short shortNumber=0;
		byte isByte=0;
		long isLong=0;
		

		System.out.println("Byte in Long :" + Long.SIZE/8);
		System.out.println("Byte in Integer :" + Integer.SIZE/8);
		
		System.out.println("Byte in Char :" + Character.SIZE/8);
		System.out.println("Byte in Short :" + Short.SIZE/8);
		
		//Float and Double
		System.out.println("Byte in Float :" + Float.SIZE/8);
		System.out.println("Byte in Double :" + Double.SIZE/8);
		//Lets See
		
	}

}
